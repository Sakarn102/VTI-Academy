<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/TestingSystem</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <property name="hibernate.format_sql">true</property>

        <!-- &lt;!&ndash; Drop and re-create the database schema on startup &ndash;&gt;-->
        <property name="hbm2ddl.auto">none</property>

        <mapping class="org.example.entity.Account"></mapping>
        <mapping class="org.example.entity.Address"></mapping>
        <mapping class="org.example.entity.Answer"></mapping>
        <mapping class="org.example.entity.CategoryQuestion"></mapping>
        <mapping class="org.example.entity.Department"></mapping>
        <mapping class="org.example.entity.DetailDepartment"></mapping>
        <mapping class="org.example.entity.Employee"></mapping>
        <mapping class="org.example.entity.Exam"></mapping>
        <mapping class="org.example.entity.ExamQuestion"></mapping>
        <mapping class="org.example.entity.Group"></mapping>
        <mapping class="org.example.entity.GroupAccount"></mapping>
        <mapping class="org.example.entity.Manager"></mapping>
        <mapping class="org.example.entity.Position"></mapping>
        <mapping class="org.example.entity.Question"></mapping>
        <mapping class="org.example.entity.Salary"></mapping>
        <mapping class="org.example.entity.TypeQuestion"></mapping>
    </session-factory>
</hibernate-configuration>